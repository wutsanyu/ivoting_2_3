我是Title
<%= end %>
<h1>候選人列表</h1>

<%= link_to '新增候選人', new_candidate_path %>

<table class="table">
  <thead>
    <tr>
      <td>候選人姓名</td>
      <td>年齡</td>
      <td>政黨</td>
      <td>政見</td>
      <td>得票數</td>
    </tr>
  </thead>
  <tbody>
    <% @candidates.each do |candidate| %>
    <tr>
      <td><%= link_to '投給這位', vote_candidate_path(candidate), method: "post", data: {confirm: "確定投給這個人？"}, class:"btn btn-primary btn-xs" %></td>
      <td><%= candidate.name  %></td>
      <td><%= candidate.age %>歲</td>
      <td><%= candidate.party %></td>
      <td><%= candidate.politics  %></td>
      <td><%= candidate.vote_logs.size %></td>
      <td>
        <%= link_to '編輯', edit_candidate_path(candidate), class:"btn btn-success btn-xs" %>
        <%= link_to '刪除', candidate_path(candidate), method: "delete", data: { confirm: "確認刪除" }, class:"btn btn-danger btn-xs" %>
      </td> 
    </tr>
    <% end %>
  </tbody>
</table>